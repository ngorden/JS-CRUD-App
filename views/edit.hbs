{{#with todo}}
<h2>Edit {{title}}</h2>
<form action="/todo/{{_id}}?_method=PUT" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input value="{{title}}" class="form-control" type="text" name="title" id="title" placeholder="Enter a Todo"
            required>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea value="{{description}}" class="form-control" name="description" id="description"
            placeholder="Enter a description"></textarea>
    </div>
    <div class="form-group">
        <label for="priority">Priority</label>
        <select name="priority" id="priority" class="form-control">
            {{#select priority}}
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label for="done">Done</label>
        <input type="checkbox" name="done" id="done" {{#if done}} checked {{/if}}>
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input value="{{date}}" type="date" name="date" id="date">
    </div>
    <div class="form-group">
        <a class="btn btn-default" href="/todo/{{_id}}">Cancel</a>
        <input class="btn btn-danger" type="submit" value="Update Todo">
    </div>
</form>
{{/with}}
